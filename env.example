# Configuración de entorno para AgroStock API

# 🔐 Configuración de JWT
JWT_SECRET=mi_clave_secreta_super_segura_para_jwt_2024
JWT_EXPIRES_IN=24h

# 🗄️ Configuración de Base de Datos
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=agrostock

# 🌐 Configuración del Servidor
PORT=8000
HOST=0.0.0.0
NODE_ENV=development

# 📁 Configuración de Archivos
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# 📧 Configuración de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_email

# 🔒 Configuración de Seguridad
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 📊 Configuración de Estadísticas
STATS_UPDATE_INTERVAL=3600000
CLEANUP_INTERVAL=86400000

# 🌍 Configuración de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# 📱 Configuración de Notificaciones
PUSH_NOTIFICATIONS_ENABLED=false
FCM_SERVER_KEY=tu_fcm_server_key_aqui

# 🔍 Configuración de Búsqueda
SEARCH_RESULTS_LIMIT=50
SEARCH_CACHE_TTL=300000

# 📈 Configuración de Analytics
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# 🚀 Configuración de Producción
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# 🔧 Configuración de Desarrollo
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_METRICS=true
